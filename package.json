{
  "name": "telegram-bot-template",
  "version": "0.1.0",
  "description": "Telegram bot starter template",
  "main": "dist/run.js",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "watch": "tsc --watch --preserveWatchOutput --pretty",
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "build": "npm run clean && tsc",
    "dev": "npm run build && concurrently -i -k -n \"bot,build\" -c \"blue.bold,yellow.bold\" \"nodemon\" \"npm run watch\"",
    "start": "node dist/run.js",
    "prepare": "husky install"
  },
  "author": "deptyped <deptyped@gmail.com>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@grammyjs/fluent": "1.0.3",
    "@grammyjs/menu": "1.1.0",
    "@grammyjs/ratelimiter": "1.1.4",
    "@grammyjs/transformer-throttler": "1.1.2",
    "@grammyjs/types": "2.7.0",
    "@moebius/fluent": "1.1.0",
    "@prisma/client": "3.12.0",
    "@satont/grammy-redis-storage": "1.2.0",
    "envalid": "7.3.1",
    "fastify": "3.28.0",
    "grammy": "1.8.0",
    "grammy-guard": "0.3.1",
    "ioredis": "5.0.4",
    "iso-639-1": "2.1.13",
    "lodash": "4.17.21",
    "module-alias": "2.2.2",
    "node-fetch": "3.2.3",
    "parse-mode": "0.1.2",
    "pino": "7.10.0",
    "pino-pretty": "7.6.1",
    "prom-client": "14.0.1"
  },
  "devDependencies": {
    "@types/debug": "4.1.7",
    "@types/ioredis": "4.28.10",
    "@types/lodash": "4.14.182",
    "@types/node": "17.0.23",
    "@typescript-eslint/eslint-plugin": "5.20.0",
    "@typescript-eslint/parser": "5.20.0",
    "concurrently": "7.1.0",
    "eslint": "8.13.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "2.7.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.4",
    "lint-staged": "12.3.8",
    "nodemon": "2.0.15",
    "prettier": "2.6.2",
    "prisma": "3.12.0",
    "rimraf": "3.0.2",
    "ts-node": "10.7.0",
    "typescript": "4.6.3"
  },
  "nodemonConfig": {
    "watch": [
      "dist",
      "locales"
    ],
    "extensions": [
      "js",
      "json",
      "ftl"
    ]
  },
  "lint-staged": {
    "*.ts": "npm run lint"
  },
  "_moduleAliases": {
    "@bot": "dist"
  }
}
